{
  "name": "@avwie/clean-architecture-poc",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "workspaces": {
    "packages": [
      "**"
    ]
  },
  "scripts": {
    "build": "pnpm run -r build",
    "test": "jest --verbose --runInBand",

    "docker:build:workspace": "docker build --file ./deployment/docker/workspace.Dockerfile -t avwie/clean-architecture-poc:workspace .",
    "docker:build:web-server": "docker build --file ./deployment/docker/app.Dockerfile -t avwie/clean-architecture-poc:app .",

    "docker:start:web-server": "docker run --detach --publish 8080:8080 --name avwie_web-server avwie/clean-architecture-poc:app",
    "docker:stop:web-server": "docker stop avwie_web-server",
    "docker:remove:web-server": "docker rm avwie_web-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avwie/clean-architecture-poc.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/avwie/clean-architecture-poc/issues"
  },
  "homepage": "https://github.com/avwie/clean-architecture-poc#readme",
  "packageManager": "pnpm@7.30.3",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "5.0.3"
  }
}
